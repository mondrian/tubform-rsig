<h1>Listing acoes</h1>

<table>
  <tr>
    <th>Controller name</th>
    <th>Action name</th>
  </tr>

<% @acoes.each do |acao| %>
  <tr>
    <td><%=h acao.controller_name %></td>
    <td><%=h acao.action_name %></td>
    <td><%= link_to 'Mostrar', acao %></td>
    <td><%= link_to 'Editar', edit_acao_path(acao) %></td>
    <td><%= link_to 'Apagar', acao, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova acao', new_acao_path %>
