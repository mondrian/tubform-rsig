<h1>Listando classes</h1>

<table>
  <tr>
    <th>Descricao</th>
  </tr>

<% @classes.each do |classe| %>
  <tr>
    <td><%=h classe.descricao %></td>
    <td><%= link_to 'Mostrar', classe %></td>
    <td><%= link_to 'Editar', edit_classe_path(classe) %></td>
    <td><%= link_to 'Apagar', classe, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova classe', new_classe_path %>
