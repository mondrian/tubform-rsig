<h1>Listando parametros</h1>

<table>
  <tr>
    <th>Chave</th>
    <th>Valor</th>
    <th>Descricao</th>
    <th>Empresa</th>
  </tr>

<% @parametros.each do |parametro| %>
  <tr>
    <td><%=h parametro.chave %></td>
    <td><%=h parametro.valor %></td>
    <td><%=h parametro.descricao %></td>
    <td><%=h parametro.empresa_id %></td>
    <td><%= link_to 'Listar', parametro %></td>
    <td><%= link_to 'Editar', edit_parametro_path(parametro) %></td>
    <td><%= link_to 'Excluir', parametro, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo parametro', new_parametro_path %>
