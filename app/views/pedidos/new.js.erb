# definicoes das stores
var str_tipos = new Ext.data.SimpleStore({
    fields: ['id', 'descricao'],
    data : [['I','INTERNO'],['E','EXTERNO']]
});

var str_clientes = new Ext.data.Store({
    reader: new Ext.data.JsonReader({
        fields: ['id', 'razao_social'],
        root: 'results'
