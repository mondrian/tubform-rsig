    <%= f.label :transportadora %><br />
    <% if Transportadora.count > 0 %>
      <%= f.select :transportadora_id, Transportadora.all.collect { |c| [c.razao_social,c.id] }, :prompt => "" %>
    <% else %>
       <b> Nenhuma transportadora cadastrada.</b>
    <% end %>
  </p>
  <p>
    <%= f.label :comprador %><br />
    <%= f.text_field :nome_comprador %>
  </p>
  <p>
    <%= f.label :observacao %><br />
    <%= f.text_area :observacao %>
  </p>
  <p>
    <%= f.label :endereco_entrega %><br />
    <%= f.text_field :endereco_entrega %>
  </p>
  <p>
    <%= f.label :minuta_id %><br />
    <%= f.text_field :minuta_id %>
  </p>
  <p>
    <%= f.label :area_id %><br />
    <%= f.text_field :area_id, :size => 5 %>
