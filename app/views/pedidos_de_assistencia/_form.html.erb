      <%= f.select :cliente_id, Cliente.all.collect { |c| [c.nome_fantasia,c.id] }, :prompt => "" %>
    <% else %>
       <b> Nenhum cliente cadastrado.</b>
    <% end %>
    <%#= f.select :cliente_id, :size => 5 %>
    <%#= text_field_tag 'nome_cliente', @pedido_de_assistencia.cliente.razao_social, :disabled => true %>
  </p>
    <p>
      <%= f.label :nosso_numero %><br />
      <%= f.text_field :nosso_numero, :size => 10 %>
    </p>
  <p>
    <%= f.label :data, 'Data do pedido' %><br />
    <%= f.text_field :data, :size => 10 %>
  </p>
  <p>
    <%= f.label :previsao_entrega, 'Previsão de entrega' %><br />
    <%= f.text_field :previsao_entrega, :size => 10  %>
  </p>
  <p>
    <%= f.label :entrega %><br />
    <%= f.text_field :entrega, :size => 10  %>
  </p>
  <p>
    <%= f.label :programacao %><br />
    <%= f.text_field :programacao, :size => 10  %>
  </p>
  <p>
    <%= f.label :plano_de_pagamento %><br />
    <%= f.text_field :plano_de_pagamento %>
  </p>
  <p>
    <%= f.label :vendedor %><br />
    <%= f.text_field :vendedor_id %>
    <% if Funcionario.count > 0 %>
      <%= f.select :vendedor_id, Funcionario.all.collect { |c| [c.nome,c.id] }, :prompt => "" %>
    <% else %>
       <b> Nenhum vendedor cadastrado.</b>
    <% end %>

    <%#= f.text_field :vendedor_id, :size => 5 %>
    <%#= text_field_tag 'nome', @pedido_de_assistencia.funcionario.nome, :disabled => true %>
